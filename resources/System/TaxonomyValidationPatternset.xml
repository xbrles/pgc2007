                    <Action saveDO="memo" method="CreateErrorMemo" uri="memo://ubmatrix.com/Validation/Taxonomy#ItemTypesMustBeXbrlDataType" />
         </Failure>
    </Pattern> 
    
    
    <Pattern id="vr_246_item" 
